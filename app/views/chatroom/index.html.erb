<div class="row">
  <div class="banner mx-auto mt-5">
    <div class="card">
      <%= image_tag  "logo.png", class: "logo card-img-top shadow" %>
    </div>
  </div>
</div>

<div class="row mt-5">
  <div class="col-md-8">
    <div class="card chat-left-panel shadow">
      <div class="card-header chat-header">
        Chatting Box
      </div>
      <div class="card-body" id="chat-body">
        <%= render @messages %>
      </div>
      <div class="card-footer chat-footer px-3">
        <%= form_with model: @message, url: message_path do |f| %>
          <div class="input-group">
            <%= f.text_field :body, class: 'form-control', placeholder: 'Type your message here ...' %>
            <div class="input-group-append">
              <%= f.button '<i class="fas fa-edit"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card chat-right-panel shadow p-3">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Users</h4>
        </div>
        <ul class="list-group list-group-flush">
          <% @users.each do |user| %>
            <li class="list-group-item"><%= user.username %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
